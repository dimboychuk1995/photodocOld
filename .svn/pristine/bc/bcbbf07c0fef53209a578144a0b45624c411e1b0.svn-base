<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

    <!-- Default Main Template -->
    <definition name=".mainTemplate" template="/WEB-INF/jsp/tiles/mainTemplate.jsp">
        <put-attribute name="menu" value="/WEB-INF/jsp/tiles/menu.jsp"/>
        <put-attribute name="content" value=""/>
        <put-attribute name="footer" value="/WEB-INF/jsp/tiles/footer.jsp"/>
    </definition>
    <definition name="login" extends=".mainTemplate">
        <put-attribute name="content" value="/WEB-INF/jsp/login.jsp"/>
    </definition>

    <definition name="index" extends=".mainTemplate">
        <put-attribute name="content" value="/WEB-INF/jsp/index.jsp"/>
    </definition>

    <definition name="addDocument" extends=".mainTemplate">
        <put-attribute name="content" value="/WEB-INF/jsp/addDocument.jsp"/>
    </definition>

    <definition name="search" extends=".mainTemplate">
        <put-attribute name="content" value="/WEB-INF/jsp/search.jsp"/>
    </definition>

    <definition name="searchResult" extends=".mainTemplate">
        <put-attribute name="content" value="/WEB-INF/jsp/searchResult.jsp"/>
    </definition>

</tiles-definitions>